<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VuLinh_2051050001</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VuLinh_2051050001.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VuLinh_2051050001</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <form>
            <h2>Tinh phuong trinh bac mot</h2>
            <label>Nhap a</label>
            <input type="number" id="so_a" />
            <br />
            <label>Nhap b</label>
            <input type="number" id="so_b" />
            <br />
            <input type="button" id="tinh_ketqua" value="Tinh ket qua"/>
            <br />
        </form>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - VuLinh_2051050001 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        var button = document.getElementById('tinh_ketqua');
        tinh_ketqua.onclick = function () {
            let a = document.getElementById('so_a').value;
            let b = document.getElementById('so_b').value;

            if (a == "" || b == "") {
                alert("Vui lòng nhập dữ liệu");
            }
            else {
                a = Number(a);
                b = Number(b);
                giai_pt_bac_nhat(a, b);
            }
        };

        function giai_pt_bac_nhat(a, b) {
            if (a == 0 && b == 0) {
                alert('Phương trình vô số nghiệm');
            }
            else if (a != 0 && b == 0) {
                alert('Phương trình có nghiệm x = 0');
            }
            else if (a == 0 && b != 0) {
                alert("Phương trình vô nghiệm");
            }
            else {
                alert('Phương trình có nghiệm x = ' + (-b / a));
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
